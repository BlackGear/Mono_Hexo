article
  text-align justify
  max-width 672px
  margin 0px auto
  padding 0px 32px 27px
  overflow auto
  line-height 28px
  box-shadow 0px 1px 3px rgba(0,0,0,0.12), 0px 1px 2px rgba(0,0,0,0.24)
  background-color rgba(255, 255, 255, 1)
p, blockquote, pre, ul, ol
  margin 14px 0px 0px
  padding 0px
article
  > h1, > h2
    margin 28px 0px 0px
    padding 0px
    font-weight inherit
    color rgba(0, 0, 0, 1)
  > h1
    font-size 28px
    &:before
      margin-right 7px
      content '#'
  > h2
    font-size 24px
    &:before
      margin-right 6px
      content '##'
  a
    padding-bottom 0px
    border-bottom rgba(0, 0, 0, .54) dotted 1px
blockquote
  border-left 4px solid rgba(0, 0, 0, .2)
  padding 7px 16px 7px 12px
pre
  font-family 'Menlo', 'Consolas', 'DejaVu Sans Mono', 'Hiragino Sans GB', 'Microsoft YaHei', 'WenQuanYi Micro Hei', 'monospace'
  font-size 14px
  line-height 21px
  margin-top 13px
  padding 14px 15px 13px
  white-space pre
  word-wrap normal
  overflow hidden
  border 1px solid rgba(0, 0, 0, .1)
  border-radius 3px
  background-color rgba(0, 0, 0, .01)
  > code
    padding 0px
    margin 0px
    vertical-align baseline
    border none
    background-color transparent
ul, ol
  padding-left 32px
  li
    margin 0px
    padding 0px
    list-style-position outside
ul > li
  list-style-type square
  ul > li
    list-style-type disc
    ul > li
      list-style-type circle
ol > li
  list-style-type decimal
  ol > li
    list-style-type upper-roman
    ol > li
      list-style-type lower-roman
li > ul, li > ol
  padding-left 16px
strong
  font-weight 700
em
  font-style inherit
  font-weight inherit
  text-decoration inherit
  text-emphasis filled circle
  text-emphasis-position under
code
  font-family 'Menlo', 'Consolas', 'DejaVu Sans Mono', 'Hiragino Sans GB', 'Microsoft YaHei', 'WenQuanYi Micro Hei', 'monospace'
  font-size 14px
  line-height 0px
  color rgba(0, 0, 0, .54)
  margin 0px 2px
  padding 3px 2px 1px
  vertical-align 1px
  word-break break-all
  border 1px solid rgba(0, 0, 0, .1)
  border-radius 3px
  background-color rgba(0, 0, 0, .01)
