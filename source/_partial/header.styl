header
  margin 0px
  padding 3px 0px
  background-color rgba(255, 255, 255, 1)
  position relative
  box-shadow 0px 1px 3px rgba(0,0,0,0.12), 0px 1px 2px rgba(0,0,0,0.24)
  overflow hidden
  a
    float left
    &:hover
      text-shadow 0px 1px 2px rgba(0, 0, 0, .36)
  h1
    color rgba(0, 0, 0, .87)
    font-size 24px
    margin 0px 6px
  h2
    color rgba(0, 0, 0, .54)
    font-size 12px
    margin 0px 6px
  nav
    float right
    text-align right
    font-size 30px
    padding 3px 0px
    a
      color rgba(0, 0, 0, .87)
      margin-right 6px
