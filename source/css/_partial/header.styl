header
  margin 0
  padding .1875rem .375rem
  background-color rgba(255,255,255,.96)
  backdrop-filter blur(.75rem)
  position fixed
  z-index 100
  left 0
  top 0
  width 100%
  max-height 2.25rem
  box-shadow 0 1px 2px rgba(0,0,0,.12), 0 2px 4px rgba(0,0,0,.24)
  overflow hidden
  a
    float left
    &:hover
      text-shadow 0 1px 2px rgba(0,0,0,.36)
    h1
      color rgba(0,0,0,.87)
      font-size 1.5rem
      margin 0
    h2
      color rgba(0,0,0,.54)
      font-size .75rem
      margin 0
  nav
    float right
    text-align right
    font-size 1.875rem
    padding .1875rem 0
    a
      color rgba(0,0,0,.87)
      margin-right 1rem
